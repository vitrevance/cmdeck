{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-windows-gui",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-ldflags",
        "-H=windowsgui",
        "-o",
        "bin/cmdeck.exe",
        "."
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$go"
    },
    {
      "label": "clean-build",
      "type": "shell",
      "command": "go",
      "args": [
        "clean",
        "&&",
        "go",
        "build",
        "-ldflags",
        "-H=windowsgui",
        "-o",
        "bin/cmdeck.exe",
        "."
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
